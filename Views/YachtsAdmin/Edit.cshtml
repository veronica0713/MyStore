@model MyStore.Models.Yacht

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Yacht</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PriceHighSeason" class="control-label"></label>
                <input asp-for="PriceHighSeason" class="form-control" />
                <span asp-validation-for="PriceHighSeason" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PriceOffSeason" class="control-label"></label>
                <input asp-for="PriceOffSeason" class="form-control" />
                <span asp-validation-for="PriceOffSeason" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>

                <img src="@Model.Image" class="img-fluid" />
                <input name="imageFile" type="file" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Size" class="control-label"></label>
                <input asp-for="Size" class="form-control" />
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cabins" class="control-label"></label>
                <input asp-for="Cabins" class="form-control" />
                <span asp-validation-for="Cabins" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="AirCond" /> @Html.DisplayNameFor(model => model.AirCond)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

